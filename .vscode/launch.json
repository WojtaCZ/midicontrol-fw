	"version": "0.2.0",
	"configurations": [
		{
			"preLaunchTask": "build",
			"type": "cortex-debug",
			"request": "launch",
			"name": "OpenOCD debug",
			"demangle" : true,
			"showDevDebugOutput": "none",
			"servertype": "openocd",
			//this is right place to define adapter speeds
			 "postStartSessionCommands": [
			 	"monitor adapter speed 500"
			 ],
			 "postRestartSessionCommands": [
			 	"monitor adapter speed 500"
			 ],
			"interface": "swd",
			"cwd": "${workspaceRoot}",
			"executable": "${workspaceRoot}/build/MIDIControl.elf",
			"svdFile": "${workspaceRoot}/STM32G431xx.svd",
			"configFiles": [
				"${workspaceRoot}/openocd.cfg",
			],
			"breakAfterReset": false
			// configure SWO
			// "swoConfig": {
			// 	"enabled": true,
			// 	"source": "probe",
			// 	"swoFrequency":   1000000,
			// 	"cpuFrequency": 72000000,
			// 	"decoders": [
			// 		{
			// 			"port": 0,
			// 			"type": "console",
			// 			"showOnStartup": true,
			// 			"label": "SWO output",
			// 			"encoding": "ascii"
			// 		},
			// 	],
			// },
		},

		{
			"type": "cortex-debug",
			// there is also attach mode, that that has several issues
			"request": "attach",
			"name": "OpenOCD SEC ATTACH",
			"demangle" : true,
			"showDevDebugOutput": "none",
			"servertype": "openocd",
			"configFiles": [
				"${workspaceRoot}/openocd.cfg",
			],
			//this is right place to define adapter speeds
			// "postStartSessionCommands": [
			// 	"monitor adapter speed 500"
			// ],
			// "postRestartSessionCommands": [
			// 	"monitor adapter speed 500"
			// ],
			"cwd": "${workspaceRoot}",
			"executable": "${workspaceRoot}/build/MIDIControl.elf",
			"svdFile": "${workspaceRoot}/STM32G431xx.svd"
		},

	]
}